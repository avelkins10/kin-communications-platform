# KIN Communications Hub Environment Variables

# Database & Authentication
DATABASE_URL="postgresql://username:password@localhost:5432/kin_communications"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_ALLOWED_DOMAIN="yourdomain.com"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"
TWILIO_AGENT_PHONE="+1234567890"
TWILIO_API_KEY="your-twilio-api-key"
TWILIO_API_SECRET="your-twilio-api-secret"

# TaskRouter Configuration
TWILIO_WORKSPACE_SID="your-workspace-sid"
TWILIO_WORKFLOW_SID="your-workflow-sid"
TWILIO_TASKROUTER_ENABLED="true"

# TaskRouter Task Queues
TWILIO_DEFAULT_TASK_QUEUE_SID="your-default-task-queue-sid"
TWILIO_PERMITS_TASK_QUEUE_SID="your-permits-task-queue-sid"
TWILIO_UTILITIES_TASK_QUEUE_SID="your-utilities-task-queue-sid"
TWILIO_SCHEDULING_TASK_QUEUE_SID="your-scheduling-task-queue-sid"
TWILIO_EMERGENCY_TASK_QUEUE_SID="your-emergency-task-queue-sid"
TWILIO_BILLING_TASK_QUEUE_SID="your-billing-task-queue-sid"
TWILIO_SUPPORT_TASK_QUEUE_SID="your-support-task-queue-sid"

# TaskRouter Activities (Public - accessible from client)
NEXT_PUBLIC_AVAILABLE_ACTIVITY_SID="your-available-activity-sid"
NEXT_PUBLIC_BUSY_ACTIVITY_SID="your-busy-activity-sid"

# Routing Configuration
AFTER_HOURS_ROUTING="voicemail"
AFTER_HOURS_TRANSFER_NUMBER="+1234567890"

# Public URLs
PUBLIC_BASE_URL="https://yourdomain.com"
NEXT_PUBLIC_BASE_URL="https://yourdomain.com"
NEXT_PUBLIC_TWILIO_PHONE_NUMBER="+1234567890"

# Quickbase CRM Integration
QUICKBASE_REALM_HOST="your-realm.quickbase.com"
QUICKBASE_REALM="your-realm"
QUICKBASE_USER_TOKEN="your-quickbase-user-token"
QUICKBASE_APP_ID="your-quickbase-app-id"
NEXT_PUBLIC_QUICKBASE_REALM_HOST="your-realm.quickbase.com"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
VOICEMAIL_EMAIL_ENABLED="true"
VOICEMAIL_FROM_EMAIL="noreply@yourdomain.com"

# Socket.io Configuration
NEXT_PUBLIC_SOCKET_URL="http://localhost:3000"
SOCKET_IO_CORS_ORIGIN="http://localhost:3000"
SOCKET_IO_PATH="/api/socket"
REALTIME_NOTIFICATIONS_ENABLED="true"
PRESENCE_TIMEOUT="30000"
HEARTBEAT_INTERVAL="10000"
MAX_RECONNECT_ATTEMPTS="5"
RECONNECT_DELAY="1000"

# Monitoring and Logging
METRICS_API_KEY="your-strong-random-key"
SENTRY_DSN="your-sentry-dsn"
