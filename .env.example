# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/kin_communications"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth (Optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_ALLOWED_DOMAIN="yourcompany.com"

# Twilio Configuration
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_TWIML_APP_SID="your-twiml-app-sid"
TWILIO_VERIFY_SERVICE_SID="your-verify-service-sid"

# QuickBase Integration
QUICKBASE_REALM_HOST="your-realm.quickbase.com"
QUICKBASE_USER_TOKEN="your-quickbase-user-token"
QUICKBASE_APP_ID="your-quickbase-app-id"

# Redis Configuration (for caching and real-time features)
REDIS_URL="redis://localhost:6379"

# AWS S3 (for file storage - optional)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket-name"

# Email Configuration (for notifications)
EMAIL_FROM="noreply@yourcompany.com"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Application Configuration
NODE_ENV="development"
PORT="3000"
